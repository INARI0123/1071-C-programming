#include<stdio.h>

void prchar(char c,int n)
{
	for(int i=1;i<=n;i++)
	{
		printf("%c",c);
	}
}

int main()
{
	int height;
	int i;
	
	
		while(1)
		{
		printf("Enter height(-1 to exit): ");
		scanf("%d",&height);
		
			if(height==-1)
			{
				printf("Bye! 405410209");
				break;
			}
			else
			{
		
				for(int i=0;i<=height;i++)
				{
				 prchar(' ',height-i);
				 prchar('*',i);
				 prchar(' ',2);
				 prchar('*',i);	
				 
				 printf("\n");
				}	
				
			}
		}
} 
