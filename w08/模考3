#include <stdio.h>
#include <ctype.h>

int  checkSqrt(int N)
{
    for(int i=1;i<=N;i++)
    {
        if(N==i*i)
            return i;妳想要的什麼值帶回主程式就return那一個值
    }
    return 0;
}
        


int main(void)
{
    int N,i;
    char cont='Y';
    
    while(cont=='Y')
    {
    printf("Enter N: ");
    scanf("%d",&N);
    i=checkSqrt(N);
    
        if(i)
        {
            printf("Yes. %d=%dx%d\n",N,i,i);
            
        }
        else
        {
            printf("No. \n");
            printf("405410209\n");
            break;
        }
        
    printf("Continue(Y/N): ");
    getchar();
    cont=toupper(getchar());
    printf("\n");
    }
}
    
